<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#2196F3"
    tools:context=".EdexJun17Fragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="EDEXCEL JUN17 Papers 1, 2, 3:"
        android:textSize="25sp"
        android:layout_marginBottom="50dp"
        />

    <Button
        android:id="@+id/btn_e_jun17_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Paper 1 Non-Calculator"
        android:textSize="20sp"
        android:backgroundTint="#EC1616"
        />

    <Button
        android:id="@+id/btn_e_jun17_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Paper 2 Calculator"
        android:textSize="20sp"
        android:backgroundTint="#F69014"
        />

    <Button
        android:id="@+id/btn_e_jun17_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Paper 3 Calculator"
        android:textSize="20sp"
        android:backgroundTint="#33D506"
        />

</LinearLayout>