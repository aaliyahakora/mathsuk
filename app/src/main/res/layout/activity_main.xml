<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_open_formulas"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FCCB90"
        android:text="Formulas"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btn_open_questions"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#B6B97C"
        android:text="Exam Questions"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btn_open_revision"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#77A27A"
        android:text="Multiple Choice Questions"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btn_timer"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#48857A"
        android:text="Timer Tool"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btn_notes"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#32676F"
        android:text="My Notes"
        android:textSize="25sp" />

    <ImageButton
        android:id="@+id/btn_instagram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxWidth="60dp"
        android:maxHeight="60dp"
        android:scaleType="fitCenter"
        android:background="@drawable/instagram_button"
        android:src="@drawable/instagram"/>

    <WebView
        android:id="@+id/web_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>