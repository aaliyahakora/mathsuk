<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:stretchColumns="0,1"
    tools:context=".EdexcelActivity">

    <TableRow
        android:layout_width="match_parent"
        android:paddingBottom="8dp"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_edex_jun17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="June 17"
            android:layout_column="0"
            android:backgroundTint="@color/black"
            android:layout_marginRight="8dp"
            android:textSize="25sp"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/btn_edex_jun18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="June 18"
            android:layout_column="1"
            android:backgroundTint="@color/black"
            android:layout_marginRight="8dp"
            android:textSize="25sp"
            android:textColor="@color/white"
            />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:paddingBottom="8dp"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/btn_edex_nov17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nov 17"
            android:layout_column="0"
            android:backgroundTint="@color/black"
            android:layout_marginRight="8dp"
            android:textSize="25sp"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/btn_edex_nov18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nov 18"
            android:layout_column="1"
            android:backgroundTint="@color/black"
            android:layout_marginRight="8dp"
            android:textSize="25sp"
            android:textColor="@color/white"
            />

    </TableRow>

    <FrameLayout
        android:id="@+id/edexFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</TableLayout>